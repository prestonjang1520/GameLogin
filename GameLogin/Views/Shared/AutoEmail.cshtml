@using System;
@using System.Collections.Generic;
@using System.Data;
@using System.Data.Entity;
@using System.Linq;
@using System.Web;
@using System.Web.Mvc;
@using GameLogin.Models;
@using System.Net.Mail;
@using GameLogin.Mailers;
@{
    ViewBag.Title = "AutoEmail";
    DateTime scheduleDate = DateTime.Now;
    int enteredDay,enteredMonth,enteredYear;
}


<h2>AutoEmail</h2>
@model GameLogin.Models.MailModel
@{
ViewBag.Title = "Index";
}
<h2>Index</h2>
<fieldset>
<legend>
Send Email
</legend>
@using (Html.BeginForm("Index","AutoEmail"))
{
@Html.ValidationSummary()
    <p>From: </p>
    <p>@Html.TextBoxFor(m=>m.From)</p>
     <p>To: </p>
    <p>@Html.TextBoxFor(m=>m.To)</p>
    <p>Subject: </p>
    <p>@Html.TextBoxFor(m=>m.Subject)</p>
     <p>Body: </p>
    <p>@Html.TextAreaFor(m=>m.Body)</p>
    <input type ="submit" value ="Send" />
}  </fieldset>

