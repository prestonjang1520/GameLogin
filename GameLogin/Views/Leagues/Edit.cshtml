@model GameLogin.Models.GameLogin.League

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>League</legend>

        @Html.HiddenFor(model => model.LeagueName)

        <div class="editor-label">
            @Html.LabelFor(model => model.TeamLogo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TeamLogo)
            @Html.ValidationMessageFor(model => model.TeamLogo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaxPlayers)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxPlayers)
            @Html.ValidationMessageFor(model => model.MaxPlayers)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PlayerCount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PlayerCount)
            @Html.ValidationMessageFor(model => model.PlayerCount)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
