@{
    ViewBag.Title = "Index";
}

<section class="add_player_header" style="text-align:center">
    <div class="add_player_content_wrapper">
        <hgroup class="title">
            <h1 style="color:#000000"><b><%: Title %></b></h1>
            <h2 style="color:#000000"><b>Add a New Player</b></h2>
        </hgroup>
        <br />
        <br />
    </div>
</section>
<div id="main" style="margin:0px 0px; text-align:center;">
    <table style="text-align:left; margin: 0px 0px 0px 150px;">
        <tr><td><h3>Player's Name</h3></td></tr>
        <tr><td><asp:TextBox ID="add_player_box_name" runat="server" style="width:200px; margin:0px 0px;"></asp:TextBox></td><td><p style="color:red;">* required</p></td></tr>
        <tr><td><h3>Email Address</h3></td></tr>
        <tr><td><asp:TextBox ID="add_player_box_email" runat="server" style="width:200px; margin:0px 0px;"></asp:TextBox></td><td><p style="color:red;">* required</p></td></tr>
        <tr><td><h3>Phone 1:</h3></td></tr>
        <tr><td><asp:TextBox ID="add_player_box_phone1" runat="server" style="width:200px; margin:0px 0px;"></asp:TextBox></td></tr>
        <tr><td><h3>Phone 2:</h3></td></tr>
        <tr><td><asp:TextBox ID="add_player_box_phone2" runat="server" style="width:200px; margin:0px 0px;"></asp:TextBox></td></tr>
        <tr><td><h3>Phone 3:</h3></td></tr>
        <tr><td><asp:TextBox ID="add_player_box_phone3" runat="server" style="width:200px; margin:0px 0px;"></asp:TextBox></td></tr>
        <tr><td><h3>Comments:<p style="color: black; font-size:10px;">(WHO INVITED THEM ONTO TEAM< DAT JOINED. ETC)</p></h3></td></tr>
        <tr><td><asp:TextBox ID="add_player_box_comment" runat="server" style="width:200px; margin:0px 0px;"></asp:TextBox></td></tr>
    </table>
</div>
<br />
<br />
<div id="add_player_wrapper" style="width:600px; margin:0px auto;">
    <div id="add_player_left_column" style="width:200px; text-align:center; float:left;">
        <h3>Regular/Spare</h3>
        <asp:RadioButtonList ID="add_player_rbl_reg_spare" runat="server" style="margin: 0px 60px">
            <asp:listitem>Regular</asp:listitem>
            <asp:listitem>Spare</asp:listitem>
        </asp:RadioButtonList>
    </div>
    <div id="add_player_center_column" style="width:200px; text-align:center;float:left;">
        <h3>Auto Login</h3>
        <asp:RadioButtonList ID="add_player_rbl_login" runat="server" style="margin: 0px 60px">
            <asp:listitem>No</asp:listitem>
            <asp:listitem>Yes</asp:listitem>
        </asp:RadioButtonList>
    </div>
    <div id="add_player_right_column" style="width:200px; text-align:center;float:right;">
        <h3>Team</h3>
        <asp:RadioButtonList ID="add_player_rbl_team" runat="server" style="margin: 0px 60px">
            <asp:listitem>Home</asp:listitem>
            <asp:listitem>Away</asp:listitem>
        </asp:RadioButtonList>
    </div>
</div>
<br />
<br />
<div style="clear:both; text-align:center" />
<h2><a style="text-align:center;" href="temp@gmail.com">HELP</a></h2>
<br />
<br />
<div id="system_roster_footer" style="width:500px;margin:0 auto;">
    <div style="width:250px;float:left;">
        <asp:Button id="add_player_btn_status" runat="server" Text="GAME STATUS" />
    </div>
    <div style="width:250px;float:right;">
        <asp:Button id="add_player_btn_main" runat="server" Text="ADMIN Main" />
    </div>
</div>
